<Window x:Class="MultithreadingWpf.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Введите число от 0 до 100:"/>
            <TextBox Text="{Binding ValueToFind}" Width="30" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Введите количество потоков:"/>
            <TextBox Text="{Binding ThreadsCount}" Width="30" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Введите задержку:"/>
            <TextBox Text="{Binding Delay}" Width="30" />
        </StackPanel>
        <Button Content="Click me" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Command="{Binding StartStopCommand}"/>

        <ListBox MinHeight="75" ItemsSource="{Binding Output}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>
